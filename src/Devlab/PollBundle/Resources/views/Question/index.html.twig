 {% extends '::base.html.twig' %}
 {% block body %}
<link href="{{ asset('bundles/devlabpoll/css/base.css') }}" type="text/css" rel="stylesheet" />
 <h1>Question list</h1>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('question_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.text }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('question_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('question_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('question_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
 {% endblock %}
